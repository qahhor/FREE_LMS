# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=lms_db
DATABASE_USER=lms_user
DATABASE_PASSWORD=lms_password
DATABASE_SYNC=false
DATABASE_LOGGING=true

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MinIO / S3
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=lms-files

# Upload
MAX_FILE_SIZE=104857600
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/ogg
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Email (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@lms.com

# Frontend URL
FRONTEND_URL=http://localhost:4200

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# CORS
CORS_ORIGIN=http://localhost:4200

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ===========================================
# PHASE 3: Monetization & Enterprise
# ===========================================

# -----------------
# Payment Gateways
# -----------------

# Payme (Uzbekistan)
PAYME_MERCHANT_ID=your-merchant-id
PAYME_MERCHANT_KEY=your-merchant-key
PAYME_ENDPOINT=https://checkout.paycom.uz

# Click (Uzbekistan)
CLICK_SERVICE_ID=your-service-id
CLICK_MERCHANT_ID=your-merchant-id
CLICK_SECRET_KEY=your-secret-key
CLICK_ENDPOINT=https://my.click.uz/services/pay

# Stripe (International)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_API_VERSION=2024-11-20.acacia

# -----------------
# SSO Configuration
# -----------------

# SAML 2.0
SAML_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----
SAML_CERTIFICATE=-----BEGIN CERTIFICATE-----\nYourCertificateHere\n-----END CERTIFICATE-----

# LDAP
LDAP_URL=ldap://your-ldap-server.com:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=your-ldap-password
LDAP_BASE_DN=ou=users,dc=example,dc=com
LDAP_SEARCH_FILTER=(uid={username})

# -----------------
# Webinar Integration
# -----------------

# Zoom
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret
ZOOM_WEBHOOK_SECRET=your-zoom-webhook-secret

# Jitsi
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=your-jitsi-app-id
JITSI_APP_SECRET=your-jitsi-app-secret

# -----------------
# SCORM Configuration
# -----------------
SCORM_STORAGE_PATH=/var/www/scorm
SCORM_MAX_PACKAGE_SIZE=500 # MB

# -----------------
# Multi-tenancy & Organizations
# -----------------
DEFAULT_ORGANIZATION_SLUG=default
ENABLE_MULTI_TENANCY=true
MAX_SEATS_PER_ORGANIZATION=100

# -----------------
# API Rate Limiting (Public API)
# -----------------
API_RATE_LIMIT_WINDOW=60 # seconds
API_RATE_LIMIT_MAX_REQUESTS=60

# -----------------
# Subscription & Billing
# -----------------
SUBSCRIPTION_TRIAL_DAYS=14
SUBSCRIPTION_GRACE_PERIOD_DAYS=7
ENABLE_AUTO_RENEWAL=true

# -----------------
# Feature Flags (Phase 3)
# -----------------
ENABLE_SCORM=true
ENABLE_WHITE_LABEL=true
ENABLE_SSO=true
ENABLE_API_ACCESS=true
ENABLE_LIVE_WEBINARS=true
