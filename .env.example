# =============================================================================
# FREE-LMS Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values before running docker-compose
# NEVER commit .env file to version control!
#
# Generate secure secrets with: openssl rand -base64 32
# =============================================================================

# =============================================================================
# REQUIRED SECRETS (must be set before running)
# =============================================================================

# PostgreSQL Database Password (REQUIRED)
# Generate: openssl rand -base64 24
POSTGRES_PASSWORD=

# JWT Secret Key (REQUIRED) - minimum 32 characters
# Generate: openssl rand -base64 32
JWT_SECRET=

# MinIO Object Storage Credentials (REQUIRED)
# Generate: openssl rand -base64 16
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
POSTGRES_USER=freelms
POSTGRES_DB=freelms
DB_POOL_SIZE=20

# Redis (optional password for production)
# Generate: openssl rand -base64 24
REDIS_PASSWORD=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Spring Profile: dev, prod
SPRING_PROFILES_ACTIVE=prod

# Application Port
APP_PORT=8080

# Logging Level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# =============================================================================
# JWT SETTINGS
# =============================================================================

# Access token expiration in milliseconds (default: 7 days)
JWT_EXPIRATION=604800000

# Refresh token expiration in milliseconds (default: 30 days)
JWT_REFRESH_EXPIRATION=2592000000

# =============================================================================
# HTTP CLIENT TIMEOUTS (milliseconds)
# =============================================================================

# Connection timeout (default: 10 seconds)
HTTP_CONNECT_TIMEOUT=10000

# Read timeout (default: 30 seconds)
HTTP_READ_TIMEOUT=30000

# Write timeout (default: 30 seconds)
HTTP_WRITE_TIMEOUT=30000

# =============================================================================
# EXTERNAL SERVICES (optional)
# =============================================================================

# Stripe Payment Integration
STRIPE_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Email/SMTP Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# =============================================================================
# MONITORING (optional)
# =============================================================================

# Grafana Admin Password
# Generate: openssl rand -base64 16
GRAFANA_ADMIN_PASSWORD=

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Base URL for the application
APP_BASE_URL=http://localhost:8080

# MinIO bucket name
MINIO_BUCKET=freelms
